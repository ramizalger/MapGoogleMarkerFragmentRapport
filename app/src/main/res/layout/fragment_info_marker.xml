<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context="com.example.user.mapgoogle.InfoMarkerFragment">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_height="190dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/jauneHodeoz"
        android:translationY="190dp"
        android:weightSum="100"
        android:clickable="true"
        android:focusable="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:text="Intermarché Super"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:text="24 Paul Vaillant Couturier Street,\nNeuilly Plaisance 93360, France"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:text="Monday: 09:00 - 13:00"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:text="Tuesday: 09:00 - 13:00"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:text="Wednesday: 09:00 - 13:00"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:text="Thursday: 09:00 - 13:00"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Friday: 09:00 - 13:00"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Saturday: 09:00 - 13:00"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sunday: 09:00 - 13:00"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/imagePlusInfo"
                android:layout_height="35dp"
                android:layout_width="35dp"
                app:srcCompat="@drawable/info_icone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:text="€€€"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/imageValider"
                android:layout_height="35dp"
                android:layout_width="35dp"
                app:srcCompat="@drawable/valider_icone" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

